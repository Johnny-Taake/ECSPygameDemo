# Game Configuration Environment Variables
# Prefix all variables with GAME_ (e.g., GAME_WINDOW_FPS)

# Window Settings
GAME_WINDOW_FPS=60
GAME_WINDOW_TITLE=Guess The Number

# Logging Settings
# Possible values: DEBUG, INFO, WARNING, ERROR, CRITICAL
GAME_LOG_LEVEL=DEBUG
# Write logs to file (True/False - default: False)
GAME_WRITE_TO_FILE=True

# Difficulty Settings
# Default difficulty index (0 for Easy, 1 for Medium, 2 for Hard, etc.)
GAME_DIFFICULTY_DEFAULT_INDEX=1

# Stats Settings
GAME_STATS_ENCRYPTION_KEY=GuessTheNumberPygameKey
GAME_STATS_FILE_NAME=game_stats.json
GAME_STATS_APP_DATA_DIR_NAME=GuessTheNumberPygame
GAME_STATS_MAX_TOP_ATTEMPTS=10

# UI Settings
GAME_SCENE_MAX_WIN_TOP_SCORES=5

# Note: To use these settings, copy this file to .env and modify the values.
# Environment variables override the default configuration values.
